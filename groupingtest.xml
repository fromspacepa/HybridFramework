<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">


<suite name="Suite" verbose="0"><!--Here the (verbose="0") is removing the unnecessary txt from the Console-->
    <groups><!--This is to group multiple testCases and run them all together-->
        <run>
            <include name="Master"/> <!-- <Master will run all the tests tagged with Master.-->
            <!--<include name="Regression"/>-->
            <!--<include name="Sanity"/>-->
            <exclude name="DataDriven"/>
        </run>
    </groups>

    <listeners>
        <listener class-name="utilities.ExtentReportManager"/>
    </listeners>

    <test  name="GroupingTest" thread-count="3" >
        <parameter name="operatingSystem" value="Windows11"/>
        <parameter name="browser" value="chrome"/>

        <classes>
            <class name="testCases.TC001_AccountRegistrationTest"/>
            <class name="testCases.TC003_LoginDDT"/>
            <class name="testCases.TC002_LoginTest"/>
        </classes>
    </test>
</suite>