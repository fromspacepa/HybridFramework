<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">


<suite name="Suite" thread-count="3" parallel="tests">
    <listeners>
        <listener class-name="utilities.ExtentReportManager"/>
    </listeners>

    <test name="CrossBrowserTesting__Chrome" >
        <parameter name="operatingSystem" value="Windows11"/>
        <parameter name="browser" value="chrome"/>
        <classes>
            <class name="testCases.TC001_AccountRegistrationTest"/>
        </classes>
    </test>

    <test name="CrossBrowserTesting__Edge" >
        <parameter name="operatingSystem" value="Windows11"/>
        <parameter name="browser" value="edge"/>
        <classes>
            <class name="testCases.TC001_AccountRegistrationTest"/>
        </classes>
    </test>

    <test name="CrossBrowserTesting__FireFox" >
        <parameter name="operatingSystem" value="Windows11"/>
        <parameter name="browser" value="firefox"/>
        <classes>
            <class name="testCases.TC001_AccountRegistrationTest"/>
        </classes>
    </test>
</suite>