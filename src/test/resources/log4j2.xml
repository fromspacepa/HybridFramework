<?xml version="1.0" encoding="UTF-8" ?>
<!--Bind to grammar/schema... -->


<Configuration status="WARN">

    <Properties>
        <Property name="basePath">./logs</Property>
    </Properties>

    <Appenders> <!-- Specifies that where to generate the logs (On the Console OR on the File) -->
        <Console name="Console" target="SYSTEM_OUT"> <!-- This is to generate the logs on the Console-Level -->
          <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/> -->
       </Console> -->


        <RollingFile name="File" fileName="${basePath}/automation.log" filePattern="${basePath}/automation-%d{yyyy-MM-dd}.log"> <!-- This is to generate the logs on the File-Level -->
                <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
                 <SizeBasedTriggeringPolicy size="5000"/>
        </RollingFile>
    </Appenders>

    <Loggers> <!-- Specifies that what type of logs would you like to generate (All < Trace < Debug < Info < Warn < Error < Fatal < Off) -->
        <Root level="Debug"><!-- Here you can use multiple log levels (you will decide) such as: All < Trace < Debug < Info < Warn < Error < Fatal < Off -->
            <!-- <AppenderRef ref="Console"/> -->
            <AppenderRef ref="File"/>
        </Root>
    </Loggers>

</Configuration>